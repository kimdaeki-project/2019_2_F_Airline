<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.airline.a1.weather.weatherMapper">
	
	<update id="weatherUpdate" parameterType="com.airline.a1.weather.WeatherVO">
		update weather set cityKor=#{cityKor}, cityEng=#{cityEng}, cityCode=#{cityCode} where apName=#{apName}
	</update>
	
	<insert id="weatherInsert" parameterType="com.airline.a1.weather.WeatherVO">
		insert into weather values(0, #{apName}, #{arrLoc}, #{depLoc}, curdate(), 0,0,0,0,0,0,0,0)
	</insert>
  
  </mapper>